{% extends 'base.html.twig' %}
{% import '@App/theme1/breadcrumb.html.twig' as breadcrumb %}
{% import '@App/theme1/table.html.twig' as table %}

{% set _title = 'Cliente' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'cliente_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    {{ table.tbl_start() }}
    {{ table.tbl_tr(cliente.tipoPersona,cliente.nombre) }}
    {{ table.tbl_tr(cliente.tipoDocumento,cliente.documento) }}
    {{ table.tbl_tr("Direccion",cliente.direccion) }}
    {{ table.tbl_tr("Telefono",cliente.telefono) }}
    {% include 'crud/_show_info.html.twig' with {'entity': cliente} %}
    {{ table.tbl_end() }}

{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'cliente','entity': cliente} %}
{% endblock %}

{% block _main_tools %}
    {% include 'crud/_tools_ico.html.twig' %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'cliente','entity': cliente} %}
{% endblock %}

{% block _body_tools_ico %}
    {% include 'crud/_show_links_tool.html.twig' with {'route_base':'cliente','entity': cliente} %}
{% endblock %}