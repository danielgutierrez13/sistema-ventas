{% extends 'base.html.twig' %}
{% import '@App/theme1/breadcrumb.html.twig' as breadcrumb %}
{% import '@App/theme1/table.html.twig' as table %}

{% set _title = 'Vendedor' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'vendedor_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    {{ table.tbl_start() }}
    {{ table.tbl_tr('Nombre',vendedor.nombre) }}
    {{ table.tbl_tr(vendedor.tipoDocumento,vendedor.documento) }}
    {{ table.tbl_tr("Direccion",vendedor.direccion) }}
    {{ table.tbl_tr("Telefono",vendedor.telefono) }}
    {{ table.tbl_tr("Usuario",vendedor.usuario.username) }}
    {{ table.tbl_tr("Correo",vendedor.usuario.email) }}
    {% include 'crud/_show_info.html.twig' with {'entity': vendedor} %}
    {{ table.tbl_end() }}

{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'vendedor','entity': vendedor} %}
{% endblock %}

{% block _main_tools %}
    {% include 'crud/_tools_ico.html.twig' %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'vendedor','entity': vendedor} %}
{% endblock %}

{% block _body_tools_ico %}
    {% include 'crud/_show_links_tool.html.twig' with {'route_base':'vendedor','entity': vendedor} %}
{% endblock %}