{% extends 'base.html.twig' %}
{% import 'macro/breadcrumb.html.twig' as breadcrumb %}
{% import 'macro/action.html.twig' as action %}

{% set _title = 'Compra' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'compra_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    {{ action.tbl_start() }}
    {{ action.tbl_tr('Cliente',compra.codigo) }}
    {{ action.tbl_tr('Proveedor',compra.proveedor) }}
    {{ action.tbl_tr('Precio',compra.precio) }}
    {{ action.tbl_end() }}

    <div class="table-responsive">
        <table class="table table-hover table-rounded table-striped border gy-6 gs-6">
            <tr class="fw-bolder fs-6 text-gray-800">
                <th>
                    Producto
                </th>
                <th>
                    Cantidad
                </th>
                <th>
                    Precio
                </th>
            </tr>

            {% for compra in compra.detalleCompras %}

                <tr>
                    <td class="d-none d-sm-table-cell">{{ compra.producto}}</td>
                    <td class="d-none d-sm-table-cell">{{ compra.cantidad}}</td>
                    <td class="d-none d-sm-table-cell">{{ compra.precio}}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No hay registros</td>
                </tr>
            {% endfor %}
        </table>
    </div>
    {{ action.tbl_start() }}
    {% include 'crud/_show_info.html.twig' with {'entity': compra} %}
    {{ action.tbl_end() }}

{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'compra','entity': compra} %}
{% endblock %}

{% block _main_tools %}
    {% include 'crud/_tools_ico.html.twig' %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'compra','entity': compra} %}
{% endblock %}

{% block _body_tools_ico %}
    {% include 'crud/_show_links_tool.html.twig' with {'route_base':'compra','entity': compra} %}
{% endblock %}
