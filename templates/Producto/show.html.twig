{% extends 'base.html.twig' %}
{% import '@App/theme1/breadcrumb.html.twig' as breadcrumb %}
{% import '@App/theme1/table.html.twig' as table %}

{% set _title = 'Producto' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'producto_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    {{ table.tbl_start() }}
    {{ table.tbl_tr('Categoria',producto.categoria) }}
    {{ table.tbl_tr('Marca',producto.marca) }}
    {{ table.tbl_tr('Descripcion',producto.descripcion) }}
    {{ table.tbl_tr('Unidad Medida',producto.unidadMedida) }}
    {{ table.tbl_tr('Precio',producto.precio) }}
    {{ table.tbl_tr('Stock',producto.stock) }}
    {% include 'crud/_show_info.html.twig' with {'entity': producto} %}
    {{ table.tbl_end() }}

{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'producto','entity': producto} %}
{% endblock %}

{% block _main_tools %}
    {% include 'crud/_tools_ico.html.twig' %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'producto','entity': producto} %}
{% endblock %}

{% block _body_tools_ico %}
    {% include 'crud/_show_links_tool.html.twig' with {'route_base':'producto','entity': producto} %}
{% endblock %}